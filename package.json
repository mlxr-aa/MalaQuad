{
  "name": "mala-quad",
  "version": "1.0.0",
  "description": "麻辣四格 - 短剧题材快速验证应用",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "build:prod": "node scripts/build.js",
    "deploy:web": "node scripts/deploy.js web",
    "lint": "vue-tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "generate-icons": "node scripts/generate-icons.js",
    "pwa:build": "npm run generate-icons && npm run build",
    "pwa:preview": "npm run build && npm run preview"
  },
  "dependencies": {
    "@types/jszip": "^3.4.0",
    "jszip": "^3.10.1",
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@types/workbox-window": "^4.3.4",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/test-utils": "^2.4.0",
    "cypress": "^13.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "sharp": "^0.34.4",
    "terser": "^5.44.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^1.0.3",
    "vue-tsc": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
